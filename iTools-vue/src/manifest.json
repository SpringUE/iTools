{
  "manifest_version": 2,
  "name": "iTools",
  "description": "iTools集成开发工具",
  "version": "0.0.1",
  "icons": {
    "48": "img/logo.png"
  },
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_title": "iTools",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/hot-reload.js",
      "js/background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/content.js"],
    "run_at": "document_end"
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "devtools_page": "devcreate.html",
  "permissions": [
    "webNavigation",
    "devtools",
    "debugger",
    "debugger.*",
    "webRequest",
    "webRequestBlocking"
  ]
}
